<% content_for :title, "All Ratings" %>

<div class="container my-4">
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>

  <h1 class="mb-4">⭐ All Ratings</h1>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @ratings.each do |rating| %>
      <div class="col">
        <%= render rating %>
        <div class="mt-2">
          <%= link_to "View Details", rating_path(rating), class: "btn btn-outline-primary btn-sm" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "➕ New Rating", new_rating_path, class: "btn btn-success" %>
  </div>
</div>
