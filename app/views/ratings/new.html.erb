<h2>Rate "<%= @movie.title %>"</h2>

<%= form_with(model: [@movie, @rating]) do |f| %>
  <div>
    <%= f.label :score %><br>
    <%= f.number_field :score, in: 1..10 %>
  </div>

  <div>
    <%= f.label :review %><br>
    <%= f.text_area :review %>
  </div>

  <%= f.submit "Submit Rating" %>
<% end %>
